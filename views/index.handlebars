<h1 class="text-center">Eat Dat Burger!</h1>

<section class="row"></section>
<div class="col-xs-4">
	<h2>Burgers that are not devoured!</h2>

	<ul>
		{{#each burgers}}
			{{#unless this.devoured}}
				<li>
					{{this.id}} : {{this.burger_name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="devour" value="true">
						<button type="submit">DEVOUR!</button>
					</form>
				</li>
			{{/unless}}
		{{/each}}
	</ul>
</div>

<div class="col-xs-4">
	<h2>Add a Burger</h2>
	<form class="" action="/" method="POST">
		<div class="form-group">
			<label for="burger">Burger Name:</label>
			<input type="text" id="burger" name="name">
		</div>

		<button type="submit">Add Burger</button>
	</form>
</div>

<div class="col-xs-4">
	<h2>Burgers that are devoured!</h2>

	<ul>
		{{#each burgers}}
			{{#if this.devoured}}
				<li>
					{{this.id}} : {{this.burger_name}}
				</li>
			{{/if}}
		{{/each}}
	</ul>
</div>